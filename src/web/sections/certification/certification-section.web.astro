---
import type { CertificationSection } from '@/types/sections/certification-section.types';
import Divider from '@/web/components/divider.astro';
import DividedList from '@/web/components/divided-list.astro';
import SectionCard from '@/web/components/section-card.astro';
import Certificate from './certificate.astro';

export interface Props extends CertificationSection {}

const { config, certificates = [] } = Astro.props;
---

<SectionCard {...config}>
  <DividedList>
    {
      certificates.length > 0 &&
        certificates.flatMap((certification, index) =>
          index === certificates.length - 1
            ? [<Certificate {...certification} />]
            : [<Certificate {...certification} />, <Divider />]
        )
    }
  </DividedList>
</SectionCard>
